import java.util.*;

public class Statistics {
	public static void main(String[] args){
		Scanner input=new Scanner(System.in);
		while(input.hasNext()){
			String a=input.next();
			String c=input.next();
			String b;
			int ans=0;
			int k=c.length()-1,i=0,t=0;
			while(k>i+1){
				t=(k+i)/2;
				System.out.println(i+" "+k+" "+t);
				b=c.substring(0,t+1);
//				System.out.println(b);
				if(a.contains(b)){
					i=t;
				}
				else{
					k=t;
				}
				System.out.println(i+" "+k+" "+t);
			}
//			for(int i=1;i<=k;i++){
//				b=b.substring(0,k-i);
//				if(a.contains(b)){
//					ans=k-i;
//					break;
//				}
//			}
			System.out.println(k);
		}
	}
}
