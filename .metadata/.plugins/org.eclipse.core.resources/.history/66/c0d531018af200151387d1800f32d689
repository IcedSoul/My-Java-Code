import java.util.*;

public class Statistics {
	public static void main(String[] args){
		Scanner input=new Scanner(System.in);
		while(input.hasNext()){
			String a=input.next();
			String b=input.next();
			int ans=0;
			int k=b.length();
			for(int i=1;i<=k;i++){
				b=b.substring(0,k-i);
				if(a.contains(b)){
					ans=k-i+1;
					break;
				}
			}
			System.out.println(ans);
		}
	}
}
