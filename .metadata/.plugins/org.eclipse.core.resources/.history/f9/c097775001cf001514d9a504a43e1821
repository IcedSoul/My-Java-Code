import java.util.*;
public class HDU2048 {
	public static void main(String[] args){
		Scanner input=new Scanner(System.in);
		double v=2;
		double ans[]=new double[50];
		ans[1]=0.0;
		ans[2]=1;
		double sum=0.0;
		for(int i=3;i<=40;i++){
			sum+=2-sum+1;
			v=v*(double)i;
			ans[i]=v*(1-sum);
		}
		while(input.hasNext()){
			int n=input.nextInt();
			System.out.println(ans[n]);
		}
	}
}
