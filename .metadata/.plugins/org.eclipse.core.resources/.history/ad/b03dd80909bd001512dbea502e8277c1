import java.util.Arrays;
import java.util.Scanner;
import java.math.*;
public class Main {
    public static void main(String[] args){
        Scanner input=new Scanner(System.in);
        while(input.hasNext()){
        	int n=input.nextInt(),m=input.nextInt(),k=input.nextInt();
        	double s[]=new double[1000005];
        	double b[]=new double[1000005];
        	for(int i=0;i<n;i++){
        		for(int j=0;j<m;j++)
        			s[j]+=input.nextDouble();
        	}
        	for(int i=0;i<m;i++)
        		b[i]=s[i];
        	Arrays.sort(s,0,m);
        	for(int i=0;i<m;i++)
        		System.out.print(s[i]+" ");
        	System.out.println();
        	for(int i=0;i<m;i++)
        		System.out.print(b[i]+" ");
        	for(int i=m-1;i>=m-k;i--){
        		for(int j=0;j<m;j++)
        			if(s[i]==b[j])
        				{System.out.print(j+1);}
        		if(i>m-k)
        			System.out.print(" ");
        		else
        			System.out.println();
        	}
        }
     }   
}