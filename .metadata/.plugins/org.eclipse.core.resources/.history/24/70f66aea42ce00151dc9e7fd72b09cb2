import java.util.*;
import java.math.*;
public class HDU1022 {
	public static void main(String[] args){
		Scanner input=new Scanner(System.in);
		BigInteger a=new BigInteger("1");
		BigInteger c=new BigInteger("0");
		BigInteger ans[][]=new BigInteger[105][105];
		for(int i=0;i<=100;i++)
			for(int j=0;j<=100;j++){
				if(i<j) ans[i][j]=c;
				else if(j==0) ans[i][j]=a;
				else{
					ans[i][j]=ans[i][j-1].add(ans[i-1][j]);
				}
			}
		while(true){
			int m=input.nextInt(),n=input.nextInt();
			if(m==0 && n==0) break;
			BigInteger e=new BigInteger("1");
			BigInteger f=new BigInteger("1");
			for(int i=1;i<=m;i++){
				e=e.multiply(f.add(a));
			}
			BigInteger g=new BigInteger("1");
			BigInteger h=new BigInteger("1");
			for(int i=1;i<=n;i++){
				g=g.multiply(h.add(a));
			}
			BigInteger b=ans[m][n].multiply(e).multiply(g);
			System.out.println(b+" "+e+" "+g);
		}
	}
}
